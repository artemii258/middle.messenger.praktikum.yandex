{
	"extends": [
		"stylelint-config-standard",
		"stylelint-config-prettier",
		"stylelint-config-standard-scss"
	],
	"rules": {
		"indentation": ["tab"],
		"selector-class-pattern": "^([_a-zA-Z]*[a-z0-9]*)(-[a-z0-9]+)*$",
		"selector-id-pattern": "^([_a-zA-Z]*[a-z0-9]*)(-[a-z0-9]+)*$",
		"no-descending-specificity": null
	}
}
